{
  "name": "rust-dno-crawler",
  "version": "1.0.0",
  "description": "Personal web hub for open-source projects and tools with modern dark mode design",
  "main": "tailwind.config.js",
  "scripts": {
    "build:css": "tailwindcss -i ./tailwind_input.css -o ./public/tailwind_output.css --minify",
    "watch:css": "tailwindcss -i ./tailwind_input.css -o ./public/tailwind_output.css --watch",
    "dev:css": "tailwindcss -i ./tailwind_input.css -o ./public/tailwind_output.css --watch --poll",
    "build:prod": "tailwindcss -i ./tailwind_input.css -o ./public/tailwind_output.css --minify --optimize",
    "clean": "rm -f ./public/tailwind_output.css",
    "rebuild": "npm run clean && npm run build:css"
  },
  "keywords": [
    "rust",
    "tailwindcss",
    "dark-mode",
    "web-hub",
    "design-system"
  ],
  "author": "Leander Grau",
  "license": "Apache-2.0",
  "type": "commonjs",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/postcss": "^4.1.7",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ]
}